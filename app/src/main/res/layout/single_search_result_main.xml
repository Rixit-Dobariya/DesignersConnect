<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/tvsrProfilePhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/image_view"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvsrDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Display name"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/tvsrUsername"
        app:layout_constraintStart_toEndOf="@+id/tvsrProfilePhoto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvsrUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="username"
        android:textColor="@color/grey"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvsrProfilePhoto"
        app:layout_constraintTop_toBottomOf="@+id/tvsrDisplayName" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFollow"
        style="@style/MyButtonStyle"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textColor="@color/white"
        android:background="@drawable/btn_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow"
        android:src="@drawable/baseline_close_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>