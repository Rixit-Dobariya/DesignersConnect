<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DesignersConnect" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="my_profile">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Theme.DesignersConnect" parent="Base.Theme.DesignersConnect" />
    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_get_started</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="MyButtonStyleWithStroke" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/sign_out</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="MyEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:background">@drawable/my_edittext_background</item>
    </style>

    <style name="MyTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:color">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HeadingStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:color">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="SubHeadingStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:color">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="spinnerStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="paddingStart">12dp</item>
    </style>

    <style name="SettingsStyle" parent="Widget.AppCompat.EditText">
        <item name="hintTextColor">@color/grey</item>
        <item name="android:fontFamily">@font/montserrat_extra_light</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
    </style>

    <style name="label" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="notificationStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:color">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15dp</item>
    </style>

</resources>